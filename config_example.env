# RFID Access Control System Configuration
# Copy this file to .env and update the values

# Camera Configuration
CAMERA_USERNAME=admin
CAMERA_PASSWORD=admin
CAMERA_1_IP=192.168.1.201
CAMERA_2_IP=192.168.1.202
CAMERA_3_IP=192.168.1.203
CAMERA_1_ENABLED=true
CAMERA_2_ENABLED=true
CAMERA_3_ENABLED=true
CAMERA_1_RTSP=rtsp://admin:admin@192.168.1.201:554/avstream/channel=1/stream=0.sdp
CAMERA_2_RTSP=rtsp://admin:admin@192.168.1.202:554/avstream/channel=1/stream=0.sdp
CAMERA_3_RTSP=rtsp://admin:admin@192.168.1.203:554/avstream/channel=1/stream=0.sdp

# S3/Upload Configuration
S3_API_URL=https://api.easyparkai.com/api/Common/Upload?modulename=anpr
MAX_RETRIES=5
RETRY_DELAY=5

# Server Configuration
BIND_IP=192.168.1.33
BIND_PORT=9000
API_KEY=your-api-key-change-this

# Authentication Configuration
ADMIN_USERNAME=admin
# Default password is 'admin123' - change this hash after first login
# To generate new hash: python -c "import hashlib; print(hashlib.sha256('your_password'.encode()).hexdigest())"
ADMIN_PASSWORD_HASH=ef92b778bafe771e89245b89ecbc08a44a4e166c06659911881f383d4473e94f
SESSION_SECRET=your-session-secret-change-this

# Firebase Configuration
FIREBASE_CRED_FILE=service.json

# GPIO Configuration (Raspberry Pi)
D0_PIN_1=18
D1_PIN_1=23
D0_PIN_2=19
D1_PIN_2=24
D0_PIN_3=20
D1_PIN_3=21
RELAY_1=25
RELAY_2=26
RELAY_3=27

# Wiegand Configuration
WIEGAND_BITS_READER_1=26
WIEGAND_BITS_READER_2=26
WIEGAND_BITS_READER_3=26

# System Configuration
BASE_DIR=/home/maxpark
IMAGES_DIR=images
LOG_FILE=rfid_system.log
LOG_LEVEL=INFO
SCAN_DELAY_SECONDS=60
CAMERA_WORKERS=3

# Upload Optimization Settings
IMAGE_UPLOAD_WORKERS=5
SYNC_INTERVAL=60
FAST_SYNC_INTERVAL=15
MAX_RETRIES=5
RETRY_DELAY=5
HTTP_TIMEOUT=45

# Storage Management Settings (Dynamic - based on available free space)
# System automatically allocates 60% of free space for images
# When limit reached, deletes 30% of allocated space (oldest images first)
STORAGE_CHECK_INTERVAL=300

# Flask Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5001
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-change-this

# Internet Check Configuration
INTERNET_CHECK_RETRIES=3
INTERNET_CHECK_TIMEOUT=5

# Photo capture settings
CAPTURE_REGISTERED_VEHICLES=true

# DS3232 RTC Configuration
RTC_ENABLED=true
RTC_I2C_BUS=1
RTC_I2C_ADDRESS=0x68

# Transaction Retention Configuration
TRANSACTION_RETENTION_DAYS=120  # Keep transactions for 120 days in local storage